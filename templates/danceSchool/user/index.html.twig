{% extends 'base.html.twig' %}

{% block title %}{{ userType }}{% endblock %}

{% block body %}
    <h1>{{ userType }}</h1>
    <a href="{{ path('app_danceschool_selected', {'id': school.id}) }}">Back To Menu</a>

    <table class="table">
        <thead>
        <tr>
            <th>Email</th>
            <th>Actions</th>
        </tr>
        </thead>

        <tbody>
        {% for user in users %}
            {% if user.id != app.user.id %}
                <tr>
                    <td>{{ user.email }}</td>
                    <td>
                        <a href="{{ path(deleteRoute, {
                            schoolId: school.id,
                            userId: user.id
                        }) }}">
                            {% if userType == "Admin-User" %}Delete admin{% else %}Delete{% endif %}
                        </a>
                    </td>
                </tr>
            {% endif %}
        {% else %}
            <tr>
                <td colspan="2">No users found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <br>
    <h1>Add {{ userType }} by Email</h1>
    <form action="{{ path(addRoute, {'schoolId': school.id}) }}" method="POST"
          onsubmit="return confirm('Are you sure you want to add this user?');">
        <input type="hidden" name="_token" value="{{ csrf_token('add_user') }}">
        <div class="mb-3">
            <label for="email" class="form-label">User Email</label>
            <input type="email" name="email" id="email" class="form-control" required>
        </div>
        <br>
        <button type="submit" class="btn btn-success">Add</button>
    </form>
{% endblock %}
